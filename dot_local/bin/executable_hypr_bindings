#!/usr/bin/env bash

prompt="rofi -dmenu -theme ~/.config/rofi/launchers/type-1/style-2.rasi"

option="
alt + b                     toggle toggle pseudo-tiling
alt + q                     close a program
alt + shift + q             quit hyprland
alt + space                 toggle floating on/off
alt + arrows                change focus
alt + tab                   move +1 workspace
alt + shift +               move -1 workspace
alt + shift + r             restart hyprland
alt + f                     toggle fullscreen
alt + 0-9                   go to the specified workspace
alt + shift + 0-9           move selected window to the specified workspace
alt +/shift .               move/send window to next monitor
alt +/shift ,               move/send window to previous monitor
alt + hjkl                  change window focus
alt + return/enter          open terminal
alt + shift + p             lock screen
alt + shift + n             open/close notification center
alt + t                     open theme switcher
alt + d                     open rofi
alt + ctrl + r              turn on bluelight filter (gammastep)
alt + ctrl + e              turn off bluelight filter (gammastep)
prtsc                       take fullscreen screenshot now
super + prtsc               take fullscreen screenshot to clipboard
super +shift + prtsc        take fullscreen screenshot and edit 
super + shift + s           take interactive screenshot 
FN + F5                     increase brightness
FN + F6                     decrease brightness
FN + F3                     increase volume
FN + F2                     decrease volumem
FN + F1                     toggle mute on/off
alt + p                     play-pause
"

echo -e "$option" | $prompt -p "Keybindings"
