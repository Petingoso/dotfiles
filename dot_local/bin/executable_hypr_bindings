#!/usr/bin/env bash

prompt="rofi -dmenu -theme ~/.config/rofi/launchers/type-1/style-2.rasi"

option="

alt + control + q           quit hyprland
alt + shift + r             reload hyprland
alt + space                 toggle floating 
alt + q                     close a program
alt + c                     toggle toggle pseudo-tiling
alt + f                     toggle fullscreen
alt + g			    toggle gaps

alt + Enter		    launch terminal (kitty)
alt + b			    toggle waybar
alt + shift + t		    toggle notification center

PrtScr			    save fullscreen screenshot
super + PrtScr		    copy fullscreen screenshot to clipboard
super + shift + Prtsc	    edit fullscreen screenshot
super + shift + s	    copy area to clipboard

alt + d			    app launcher (rofi)
alt + t			    change theme 
alt + control + x	    power menu
alt + control + k	    this keybind menu 
alt + shift + p		    lock screen

alt + control + e	    enable bluelight filter 
alt + control + r	    disable bluelight filter

alt + 0-9                   go to the specified workspace
alt + shift + 0-9           move selected window to the specified workspace

alt + arrows                change window focus
alt + hjkl                  change window focus
alt + shift + arrows        move window left/down/up/right
alt + shift + hjkl	    move window left/down/up/right
alt + control + h/l	    change tiled window size
alt + control + left/right  change tiled window size

alt + right click	    resize window
alt + left click	    resize window

alt + v			    change split type (vertical/horizontal)
alt + shift + v		    toggle tabview (group windows)
alt + n			    go foward in group
alt + shift + n		    go backwards in group

alt + s			    swap with master (master layout only)

alt + tab                   move +1 workspace
alt + shift + tab           move -1 workspace

alt + [shift] + .               move/send window to next monitor
alt + [shift] + ,               move/send window to previous monitor


FN + F5                     increase brightness
FN + F6                     decrease brightness

FN + F3                     increase volume
FN + F2                     decrease volumem
FN + F1                     toggle mute on/off
alt + p                     play-pause
"

echo -e "$option" | $prompt -p "Keybindings"
