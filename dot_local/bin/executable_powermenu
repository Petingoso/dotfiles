#!/usr/bin/env bash

prompt="rofi -dmenu -theme ~/.config/rofi/launchers/type-1/power.rasi"

uptime=$(uptime -p | sed -e 's/up //g')

shutdown="ï€‘ Shutdown"
reboot="ï•® Restart"
lock="ï€£ Lock"
logout="ï«¼ Logout"
suspend="ðŸ–ª Suspend"
cancel="ïª¬ Cancel"

option="$cancel\n$shutdown\n$reboot\n$lock\n$suspend\n$logout"

select="$(echo -e "$option" | $prompt -p "Uptime - $uptime")"

case $select in
	$shutdown)
		poweroff
		;;
	$reboot)
		reboot
		;;
	$lock)
		loginctl lock-session
		;;
	$suspend)
		systemctl suspend
		;;
	$logout)
		loginctl terminate-session self
esac
